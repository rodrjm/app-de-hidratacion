# Configuración de Django
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Configuración de Base de Datos
# Opción 1: PostgreSQL (Recomendado para producción)
DB_NAME=hydrotracker
DB_USER=postgres
DB_PASSWORD=your-password-here
DB_HOST=localhost
DB_PORT=5432

# Opción 2: SQLite (Recomendado para desarrollo)
# Comenta las líneas de PostgreSQL y descomenta la siguiente línea
# USE_SQLITE=True

# Configuración de Email (opcional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Configuración de Caché (opcional)
CACHE_BACKEND=locmem://
CACHE_TIMEOUT=300

# Configuración de Archivos Estáticos
STATIC_URL=/static/
MEDIA_URL=/media/

# Mercado Pago (usar credenciales de PRUEBA del VENDEDOR)
# MP_PUBLIC_KEY se usa en frontend (checkout) y MP_ACCESS_TOKEN en backend (preferencias/webhooks)
MP_PUBLIC_KEY=TEST-xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
MP_ACCESS_TOKEN=TEST-xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# URLs base (para back_urls y notification_url)
BACKEND_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000
